<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_my_app"
        tools:context=".SreachSettings">

    <TextView
            android:text="Zimmersanzahl"
            android:layout_width="wrap_content"
            android:layout_height="30dp" android:id="@+id/sreachSettingsRoomsNumber"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.049"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.717"
            android:layout_marginTop="25dp"/>
    <TextView
            android:text="Preise bis"
            android:layout_width="wrap_content"
            android:layout_height="30dp" android:id="@+id/sreachSettingsRoomsNumber2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.09"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/sreachSettingsSeekerbar"
            app:layout_constraintVertical_bias="0.0"/>
    <Spinner
            android:id="@+id/rentBuyBoth"
            android:layout_width="170dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.854"
            app:layout_constraintVertical_bias="0.2" android:layout_marginTop="35dp"/>
    <Button
            style="@android:style/Widget.Holo.Button"
            android:text="Zurück zu Angebote"
            android:layout_width="322dp"
            android:layout_height="50dp" android:id="@+id/backSreachSettings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.979"/>
    <TextView
            android:text="Suche einstellen"
            android:layout_width="263dp"
            android:layout_height="54dp" android:id="@+id/textView10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/backSreachSettings"
            app:layout_constraintVertical_bias="0.021" android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"/>
    <TextView
            android:text="Hier können Sie die Suche beschränken auf :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintVertical_bias="0.053"
    />
    <TextView
            android:text="Angebote zum "
            android:layout_width="133dp"
            android:layout_height="30dp" android:id="@+id/textView13"
            app:layout_constraintEnd_toStartOf="@+id/rentBuyBoth"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintVertical_bias="0.045" android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="15dp"/>
    <TextView
            android:text="Zimmersanzahl"
            android:layout_width="wrap_content"
            android:layout_height="30dp" android:id="@+id/textView16"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000" app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.048"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.104"
            android:layout_marginTop="25dp"/>
    <SeekBar
            android:max="10"
            android:layout_width="350dp"
            android:layout_height="30dp" android:id="@+id/sreachSettingsSeekerbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="478dp" app:layout_constraintBottom_toTopOf="@+id/backSreachSettings"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintHorizontal_bias="0.426" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/sreachSettingsPreis"
            app:layout_constraintStart_toEndOf="@+id/sreachSettingsRoomsNumber2"
            android:layout_marginEnd="34dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/backSreachSettings"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/sreachSettingsSeekerbar"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <Button
            style="@android:style/Widget.Holo.Button"
            android:text="Zurücksetzen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sreachSettingsRestButton"
            android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/sreachSettingsPreis" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/backSreachSettings" app:layout_constraintHorizontal_bias="0.893"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>