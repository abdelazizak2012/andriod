<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_my_app"
        tools:context=".newOffer">

    <TextView
            android:text="Angebot erstellen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/offer"
            android:layout_marginEnd="176dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="177dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintVertical_bias="0.0"
            style="@android:style/Widget.TextView.PopupMenu" android:textStyle="bold"
            android:textIsSelectable="false" android:selectAllOnFocus="false"/>
    <EditText
            android:layout_width="371dp"
            android:layout_height="111dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/descreption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="Text" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.6" app:layout_constraintVertical_bias="0.638"/>
    <EditText
            android:layout_width="228dp"
            android:layout_height="47dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/roomsNumber"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.879" app:layout_constraintVertical_bias="0.822"
            android:hint="Anzahl"/>
    <EditText
            android:layout_width="232dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/preis"
            android:hint="in Euro" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintVertical_bias="0.743"/>
    <Button
            android:text="EinfÃ¼gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="104dp"
            app:layout_constraintVertical_bias="0.939" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.276"
            style="@android:style/Widget.Holo.Button"/>
    <Button
            android:text="Abbrechen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cancel"
            android:layout_marginTop="106dp"
            android:layout_marginStart="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.937"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.71" style="@android:style/Widget.Holo.Button"/>
    <ImageView
            android:adjustViewBounds="true"
            android:layout_width="413dp"
            android:layout_height="151dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageViewNewOffer"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125"/>
    <Button
            android:drawableTop="@drawable/gallery"
            android:layout_width="148dp"
            android:layout_height="38dp" android:id="@+id/imageAdd"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.916" app:layout_constraintVertical_bias="0.35"
            style="@android:style/Widget.Holo.Button"/>
    <Button

            android:drawableTop="@drawable/camera"
            android:layout_width="148dp"
            android:layout_height="38dp" android:id="@+id/takephoto"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.095" app:layout_constraintVertical_bias="0.35"
            style="@android:style/Widget.Holo.Button"/>
    <Switch
            android:text="Vermieten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.947"
            android:showText="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textOn=" " android:textOff=" "
            app:layout_constraintVertical_bias="0.518"/>
    <EditText
            android:layout_width="372dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/title"
            android:hint="Titel" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.445"/>
    <TextView
            android:text="ZimmerAnzahl"
            android:layout_width="123dp"
            android:layout_height="25dp" android:id="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/roomsNumber" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.666" app:layout_constraintVertical_bias="0.814"
            android:textAlignment="textStart" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"/>
    <TextView
            android:text="Preis"
            android:layout_width="119dp"
            android:layout_height="30dp" android:id="@+id/textView8"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/preis"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.595" app:layout_constraintVertical_bias="0.738"/>

    <TextView
            android:text="Beschreibung"
            android:layout_width="125dp"
            android:layout_height="25dp" android:id="@+id/textView9"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintVertical_bias="0.52"/>
</androidx.constraintlayout.widget.ConstraintLayout>