<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:background="@drawable/bg"
                                   android:layout_margin="4dp"
                                   app:cardCornerRadius="4dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:layout_margin="4dp">

        <TextView
                android:id="@+id/cardDescreptionFaviort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Line 1"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" android:layout_marginTop="13dp" android:textAlignment="center"/>
        <TextView
                android:id="@+id/cardpreisFaviort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardDescreptionFaviort"
                android:text="Line 2"
                android:textSize="15sp" android:layout_marginTop="180dp"
                android:layout_toStartOf="@+id/imageViewFaviort" android:layout_marginEnd="-50dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cardRoomsNumberFaviort"
                android:layout_toEndOf="@+id/cardpreisFaviort" android:layout_marginStart="170dp"
                android:layout_marginTop="0dp" android:layout_below="@+id/textView2"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cardRollFaviort"
                android:layout_alignParentEnd="true" android:layout_marginEnd="0dp" android:layout_marginTop="0dp"
                android:layout_below="@+id/textView4"/>
        <TextView
                android:text="Preis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginTop="160dp"
                android:layout_below="@+id/cardDescreptionFaviort"
                android:layout_toStartOf="@+id/imageViewFaviort" android:layout_marginEnd="-40dp"/>
        <TextView
                android:text="Zimmersanzahl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginTop="161dp"
                android:layout_below="@+id/cardDescreptionFaviort"
                android:layout_marginStart="130dp"
                android:layout_toEndOf="@+id/textView"/>
        <TextView
                android:text="zum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="160dp"
                android:layout_below="@+id/cardDescreptionFaviort" android:layout_marginEnd="0dp"
                android:layout_alignParentEnd="true"/>


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="136dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:id="@+id/imageViewFaviort" android:layout_marginTop="11dp"
                android:layout_below="@+id/cardDescreptionFaviort"
        />
        <TextView
                android:text="â‚¬"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginTop="181dp"
                android:layout_below="@+id/cardDescreptionFaviort" android:layout_toEndOf="@+id/cardpreisFaviort"
                android:layout_marginStart="50dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>